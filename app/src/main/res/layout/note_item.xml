<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/noteItemLayoutParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="5dp"
        app:cardCornerRadius="13dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/postImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/shape_image"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/postItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/postImage"
                android:ellipsize="end"
                android:fontFamily="@font/google_sans_medium"
                android:padding="5dp"
                android:text="This is a title"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/noteContentItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/postItemTitle"
                android:layout_margin="4dp"
                android:ellipsize="end"
                android:fontFamily="@font/google_sans_medium"
                android:maxLines="6"
                android:padding="5dp"
                android:text="@string/some_text"
                android:textSize="14sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/noteDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/noteContentItem"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_outline_calendar_today_24"
                android:drawablePadding="6dp"
                android:drawableTint="@color/black"
                android:ellipsize="end"
                android:fontFamily="@font/google_sans_regular"
                android:padding="5dp"
                android:text="dd-mm-yy"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>